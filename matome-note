- „É™„Çπ„Éà1
- „É™„Çπ„Éà2

**Â§™Â≠ó** *Êñú‰Ωì*

„Ç≥„Éº„Éâ: `code`"></textarea>
                    </div>
                    <div>
                        <h4>„Éó„É¨„Éì„É•„Éº</h4>
                        <div class="preview-pane" id="notePreview"></div>
                    </div>
                </div>
            </div>

            <div style="display: flex; gap: 10px;">
                <button class="btn btn-secondary" onclick="closeModal('noteModal')">„Ç≠„É£„É≥„Çª„É´</button>
                <button class="btn btn-primary" onclick="saveNote()">‰øùÂ≠ò</button>
            </div>
        </div>
    </div>

    <script>
        let subjects = [];
        let notes = [];
        let selectedSubjectId = null;
        let editingNoteId = null;
        let currentSort = 'date';

        function loadData() {
            try {
                const subjectsData = localStorage.getItem('note-subjects');
                const notesData = localStorage.getItem('notes');
                
                if (subjectsData) subjects = JSON.parse(subjectsData);
                if (notesData) notes = JSON.parse(notesData);
                
                loadBooksFromStudyApp();
            } catch (error) {
                console.error('Ë™≠„ÅøËæº„Åø„Ç®„É©„Éº:', error);
            }
            renderSubjects();
            renderNotes();
        }

        function loadBooksFromStudyApp() {
            try {
                const studyData = localStorage.getItem('study-data');
                if (studyData) {
                    const subjects = JSON.parse(studyData);
                    const select = document.getElementById('noteBook');
                    select.innerHTML = '<option value="">„Å™„Åó</option>';
                    
                    subjects.forEach(subject => {
                        subject.books.forEach(book => {
                            const option = document.createElement('option');
                            option.value = JSON.stringify({subject: subject.name, book: book.name});
                            option.textContent = `${subject.name} - ${book.name}`;
                            select.appendChild(option);
                        });
                    });
                }
            } catch (error) {
                console.log('ÂïèÈ°åÈõÜ„Ç¢„Éó„É™„ÅÆ„Éá„Éº„Çø„Å™„Åó');
            }
        }

        function saveData() {
            localStorage.setItem('note-subjects', JSON.stringify(subjects));
            localStorage.setItem('notes', JSON.stringify(notes));
        }

        function renderSubjects() {
            const list = document.getElementById('subjectList');
            
            if (subjects.length === 0) {
                list.innerHTML = '<div style="color: #999; text-align: center; padding: 20px;">ÊïôÁßë„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</div>';
                return;
            }

            list.innerHTML = subjects.map(s => {
                const count = notes.filter(n => n.subjectId === s.id).length;
                return `
                    <div class="subject-item ${s.id === selectedSubjectId ? 'active' : ''}" onclick="selectSubject(${s.id})">
                        <span>${s.name}</span>
                        <span class="subject-count">${count}</span>
                    </div>
                `;
            }).join('');
        }

        function selectSubject(id) {
            selectedSubjectId = id;
            renderSubjects();
            renderNotes();
        }

        function renderNotes() {
            const content = document.getElementById('notesContent');
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            
            let filtered = notes;
            
            if (selectedSubjectId) {
                filtered = filtered.filter(n => n.subjectId === selectedSubjectId);
            }
            
            if (searchTerm) {
                filtered = filtered.filter(n => 
                    n.title.toLowerCase().includes(searchTerm) ||
                    n.content.toLowerCase().includes(searchTerm) ||
                    (n.tags && n.tags.some(tag => tag.toLowerCase().includes(searchTerm)))
                );
            }

            sortNotesArray(filtered);

            if (filtered.length === 0) {
                content.innerHTML = '<div class="empty-state">„Éé„Éº„Éà„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</div>';
                return;
            }

            content.innerHTML = `
                <div class="notes-grid">
                    ${filtered.map(note => {
                        const subject = subjects.find(s => s.id === note.subjectId);
                        const preview = note.content.substring(0, 150);
                        return `
                            <div class="note-card" onclick="editNote(${note.id})">
                                <div class="note-title">${note.title}</div>
                                <div class="note-preview">${preview}...</div>
                                ${note.tags && note.tags.length > 0 ? `
                                    <div class="note-tags">
                                        ${note.tags.map(tag => `<span class="tag">#${tag}</span>`).join('')}
                                    </div>
                                ` : ''}
                                ${note.linkedBook ? `
                                    <div style="margin-top: 10px; color: #2ecc71; font-size: 0.85em;">
                                        üìö ${note.linkedBook}
                                    </div>
                                ` : ''}
                                <div class="note-meta">
                                    <span>${subject ? subject.name : ''}</span>
                                    <span>${new Date(note.updatedAt).toLocaleDateString('ja-JP')}</span>
                                </div>
                            </div>
                        `;
                    }).join('')}
                </div>
            `;
        }

        function sortNotesArray(notesArray) {
            if (currentSort === 'date') {
                notesArray.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
            } else if (currentSort === 'title') {
                notesArray.sort((a, b) => a.title.localeCompare(b.title));
            } else if (currentSort === 'updated') {
                notesArray.sort((a, b) => new Date(b.updatedAt) - new Date(a.updatedAt));
            }
        }

        function sortNotes(type) {
            currentSort = type;
            renderNotes();
        }

        function searchNotes() {
            renderNotes();
        }

        function showAddSubjectModal() {
            document.getElementById('addSubjectModal').classList.add('show');
            document.getElementById('subjectName').value = '';
            document.getElementById('subjectName').focus();
        }

        function addSubject() {
            const name = document.getElementById('subjectName').value.trim();
            if (!name) return;

            subjects.push({
                id: Date.now(),
                name
            });

            saveData();
            renderSubjects();
            closeModal('addSubjectModal');
        }

        function showAddNoteModal() {
            if (subjects.length === 0) {
                alert('„Åæ„ÅöÊïôÁßë„ÇíËøΩÂä†„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }
            if (!selectedSubjectId) {
                alert('ÊïôÁßë„ÇíÈÅ∏Êäû„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }

            editingNoteId = null;
            document.getElementById('noteModalTitle').textContent = '„Éé„Éº„Éà„ÇíËøΩÂä†';
            document.getElementById('noteTitle').value = '';
            document.getElementById('noteTags').value = '';
            document.getElementById('noteContent').value = '';
            document.getElementById('noteBook').value = '';
            document.getElementById('notePreview').innerHTML = '';
            document.getElementById('noteModal').classList.add('show');
            loadBooksFromStudyApp();
        }

        function editNote(id) {
            const note = notes.find(n => n.id === id);
            if (!note) return;

            editingNoteId = id;
            selectedSubjectId = note.subjectId;
            renderSubjects();

            document.getElementById('noteModalTitle').textContent = '„Éé„Éº„Éà„ÇíÁ∑®ÈõÜ';
            document.getElementById('noteTitle').value = note.title;
            document.getElementById('noteTags').value = note.tags ? note.tags.join(', ') : '';
            document.getElementById('noteContent').value = note.content;
            document.getElementById('noteBook').value = note.linkedBookData || '';
            updatePreview();
            document.getElementById('noteModal').classList.add('show');
            loadBooksFromStudyApp();
        }

        function saveNote() {
            const title = document.getElementById('noteTitle').value.trim();
            const content = document.getElementById('noteContent').value.trim();
            const tagsInput = document.getElementById('noteTags').value.trim();
            const bookValue = document.getElementById('noteBook').value;

            if (!title || !content) {
                alert('„Çø„Ç§„Éà„É´„Å®ÂÜÖÂÆπ„ÇíÂÖ•Âäõ„Åó„Å¶„Åè„Å†„Åï„ÅÑ');
                return;
            }

            const tags = tagsInput ? tagsInput.split(',').map(t => t.trim()).filter(t => t) : [];
            
            let linkedBook = null;
            let linkedBookData = null;
            if (bookValue) {
                try {
                    const bookInfo = JSON.parse(bookValue);
                    linkedBook = `${bookInfo.subject} - ${bookInfo.book}`;
                    linkedBookData = bookValue;
                } catch (e) {}
            }

            if (editingNoteId) {
                notes = notes.map(n => {
                    if (n.id === editingNoteId) {
                        return {
                            ...n,
                            title,
                            content,
                            tags,
                            linkedBook,
                            linkedBookData,
                            updatedAt: new Date().toISOString()
                        };
                    }
                    return n;
                });
            } else {
                notes.push({
                    id: Date.now(),
                    subjectId: selectedSubjectId,
                    title,
                    content,
                    tags,
                    linkedBook,
                    linkedBookData,
                    createdAt: new Date().toISOString(),
                    updatedAt: new Date().toISOString()
                });
            }

            saveData();
            renderSubjects();
            renderNotes();
            closeModal('noteModal');
        }

        function closeModal(id) {
            document.getElementById(id).classList.remove('show');
        }

        function updatePreview() {
            const content = document.getElementById('noteContent').value;
            const preview = document.getElementById('notePreview');
            preview.innerHTML = marked.parse(content);
        }

        function exportNotes() {
            let filtered = notes;
            if (selectedSubjectId) {
                filtered = filtered.filter(n => n.subjectId === selectedSubjectId);
            }

            if (filtered.length === 0) {
                alert('„Ç®„ÇØ„Çπ„Éù„Éº„Éà„Åô„Çã„Éé„Éº„Éà„Åå„ÅÇ„Çä„Åæ„Åõ„Çì');
                return;
            }

            let text = '# „Åæ„Å®„ÇÅ„Éé„Éº„Éà „Ç®„ÇØ„Çπ„Éù„Éº„Éà\n\n';
            
            filtered.forEach(note => {
                const subject = subjects.find(s => s.id === note.subjectId);
                text += `## ${note.title}\n`;
                text += `ÊïôÁßë: ${subject ? subject.name : ''}\n`;
                text += `‰ΩúÊàêÊó•: ${new Date(note.createdAt).toLocaleDateString('ja-JP')}\n`;
                if (note.tags && note.tags.length > 0) {
                    text += `„Çø„Ç∞: ${note.tags.join(', ')}\n`;
                }
                if (note.linkedBook) {
                    text += `Èñ¢ÈÄ£ÂïèÈ°åÈõÜ: ${note.linkedBook}\n`;
                }
                text += `\n${note.content}\n\n`;
                text += '---\n\n';
            });

            const blob = new Blob([text], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `„Åæ„Å®„ÇÅ„Éé„Éº„Éà_${new Date().toLocaleDateString('ja-JP')}.txt`;
            a.click();
            URL.revokeObjectURL(url);
        }

        document.getElementById('noteContent').addEventListener('input', updatePreview);
        
        document.getElementById('subjectName').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') addSubject();
        });

        loadData();
    </script>
</body>
</html>

